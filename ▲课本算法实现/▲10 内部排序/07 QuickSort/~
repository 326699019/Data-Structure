/* Note:Your choice is C IDE */
#include "stdio.h"

// ½×³Ë
int g(int n)
{
	if(n==1)
		return 1;
	else
		return g(n-1)*n;	
}

// Çó½×³ËµÄºÍ 
int f(int n)
{
	int i;
	int sum = 0;
	
	for(i=1; i<=n; i++)
	{
		sum += g(i);
	}
	
	return sum;
}

void main()
{
    int n;
    
    scanf("%d", &n);
    printf("%d\n", f(n));
}
